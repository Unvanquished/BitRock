                    <comment>Unvanquished server browser</comment>
                    <name>Osavul</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/osavul.exe</windowsExec>
