        <component>
            <name>md5sum</name>
            <description>md5sum</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>0</show>
            <folderList>
                <folder>
                    <description>md5sum</description>
                    <destination>${system_temp_directory}</destination>
                    <name>md5sum</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>tools/md5sum/md5sum.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>md5</description>
                    <destination>${system_temp_directory}</destination>
                    <name>md5</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
