    <readyToInstallActionList>
        <setInstallerVariable>
            <name>project.installationType</name>
            <value>upgrade</value>
            <ruleList>
                <fileExists>
                    <path>${installdir}/</path>
                </fileExists>
            </ruleList>
        </setInstallerVariable>
    </readyToInstallActionList>
    <postInstallationActionList>
        <actionGroup>
            <explanation>Verifying game data</explanation>
            <actionList>
                <setInstallerVariable>
                    <name>assetsNotVerified</name>
                    <value>1</value>
                </setInstallerVariable>
                <while>
                    <explanation>Verify Game Data</explanation>
                    <actionList>
                        <actionGroup>
                            <explanation>Downloading Required Files...</explanation>
                            <actionList>
                                <readFile>
                                    <name>paklist</name>
                                    <path>${mainDir}/paklist</path>
                                </readFile>
                                <setInstallerVariable>
                                    <name>pakTotal</name>
                                    <value>0</value>
                                </setInstallerVariable>
                                <setInstallerVariable>
                                    <name>missingPaks</name>
                                    <value></value>
                                </setInstallerVariable>
                                <foreach>
                                    <values>${pakList}</values>
                                    <variables>pak</variables>
                                    <actionList>
                                        <if>
                                            <actionList>
                                                <mathExpression>
                                                    <text>${pakTotal} + 1</text>
                                                    <variable>pakTotal</variable>
                                                </mathExpression>
                                                <setInstallerVariable>
                                                    <name>missingPaks</name>
                                                    <value>${missingPaks} ${pak}</value>
                                                </setInstallerVariable>
                                            </actionList>
                                            <conditionRuleList>
                                                <fileExists>
                                                    <negate>1</negate>
                                                    <path>${mainDir}/${pak}</path>
                                                </fileExists>
                                                <fileExists>
                                                    <negate>1</negate>
                                                    <path>${home_mainDir}/${pak}</path>
                                                </fileExists>
                                            </conditionRuleList>
                                        </if>
                                    </actionList>
                                </foreach>
                                <setInstallerVariable>
                                    <name>pakCount</name>
                                    <value>0</value>
                                </setInstallerVariable>
                                <foreach>
                                    <values>${missingPaks}</values>
                                    <variables>pak</variables>
                                    <actionList>
                                        <mathExpression>
                                            <abortOnError>0</abortOnError>
                                            <showMessageOnError>0</showMessageOnError>
                                            <text>${pakCount} + 1</text>
                                            <variable>pakCount</variable>
                                        </mathExpression>
                                        <showProgressDialog>
                                            <abortOnError>0</abortOnError>
                                            <progressText>Assets (sounds, models and textures)</progressText>
                                            <title>Downloading [${pakCount}/${pakTotal}] ${pak}...</title>
                                            <actionList>
                                                <httpGet>
                                                    <abortOnError>0</abortOnError>
                                                    <filename>${mainDir}/${pak}</filename>
                                                    <progressText>Downloading Assets [${pakCount}/${pakTotal}]</progressText>
                                                    <url>http://sourceforge.net/projects/unvanquished/files/Assets/${pak}</url>
                                                </httpGet>
                                            </actionList>
                                        </showProgressDialog>
                                    </actionList>
                                </foreach>
                            </actionList>
                            <ruleList>
                                <isTrue>
                                    <value>${project.component(Assets).selected}</value>
                                </isTrue>
                                <isTrue>
                                    <value>${project.component(Assets).component(gpaks).selected}</value>
                                </isTrue>
                            </ruleList>
                        </actionGroup>
                        <actionGroup>
                            <explanation>Downloading maps</explanation>
                            <actionList>
                                <readFile>
                                    <name>maplist</name>
                                    <path>${mainDir}/maplist</path>
                                </readFile>
                                <setInstallerVariable>
                                    <name>mapTotal</name>
                                    <value>0</value>
                                </setInstallerVariable>
                                <setInstallerVariable>
                                    <name>missingMaps</name>
                                    <value></value>
                                </setInstallerVariable>
                                <foreach>
                                    <values>${mapList}</values>
                                    <variables>map</variables>
                                    <actionList>
                                        <if>
                                            <actionList>
                                                <mathExpression>
                                                    <text>${mapTotal} + 1</text>
                                                    <variable>mapTotal</variable>
                                                </mathExpression>
                                                <setInstallerVariable>
                                                    <name>missingMaps</name>
                                                    <value>${missingMaps} ${map}</value>
                                                </setInstallerVariable>
                                            </actionList>
                                            <conditionRuleList>
                                                <fileExists>
                                                    <negate>1</negate>
                                                    <path>${mainDir}/${map}</path>
                                                </fileExists>
                                                <fileExists>
                                                    <negate>1</negate>
                                                    <path>${home_mainDir}/${map}</path>
                                                </fileExists>
                                            </conditionRuleList>
                                        </if>
                                    </actionList>
                                </foreach>
                                <setInstallerVariable>
                                    <name>mapCount</name>
                                    <value>0</value>
                                </setInstallerVariable>
                                <foreach>
                                    <values>${missingMaps}</values>
                                    <variables>map</variables>
                                    <actionList>
                                        <mathExpression>
                                            <abortOnError>0</abortOnError>
                                            <showMessageOnError>0</showMessageOnError>
                                            <text>${mapCount} + 1</text>
                                            <variable>mapCount</variable>
                                        </mathExpression>
                                        <showProgressDialog>
                                            <abortOnError>0</abortOnError>
                                            <progressText>Maps</progressText>
                                            <title>Downloading [${mapCount}/${mapTotal}] ${map}...</title>
                                            <actionList>
                                                <httpGet>
                                                    <abortOnError>0</abortOnError>
                                                    <filename>${mainDir}/${map}</filename>
                                                    <progressText>Downloading Map [${mapcount}/${mapTotal}]</progressText>
                                                    <url>http://sourceforge.net/projects/unvanquished/files/Assets/${map}</url>
                                                </httpGet>
                                            </actionList>
                                        </showProgressDialog>
                                    </actionList>
                                </foreach>
                            </actionList>
                            <ruleList>
                                <isTrue>
                                    <value>${project.component(Assets).selected}</value>
                                </isTrue>
                                <isTrue>
                                    <value>${project.component(Assets).component(Maps).selected}</value>
                                </isTrue>
                            </ruleList>
                        </actionGroup>
                        <if>
                            <explanation>Check MD5 for windows</explanation>
                            <actionList>
	<!-- Setting a variable directly from the output of md5sum doesn't work correctly.
        As such we set it from program_stdout instead. -->
	<runProgram>
                                    <abortOnError>0</abortOnError>
                                    <program>${system_temp_directory}/md5sum.exe</program>
                                    <programArguments>-c md5sums${project.version}</programArguments>
                                    <progressText>Verifying assets</progressText>
                                    <showMessageOnError>0</showMessageOnError>
                                    <workingDirectory>${mainDir}</workingDirectory>
                                </runProgram>
                                <setInstallerVariableFromRegEx>
                                    <breakpoint>1</breakpoint>
                                    <name>badAssetList</name>
                                    <pattern>([a-zA-z0-9_\.-]*:\sOK)|(:\sFAILED)|([a-zA-Z0-9_\.-]*:\sFAILED\sopen\sor\sread)</pattern>
                                    <substitution></substitution>
                                    <text>${program_stdout}</text>
                                </setInstallerVariableFromRegEx>
                                <stringModify>
                                    <text>${badAssetList}</text>
                                    <variable>badAssetList</variable>
                                </stringModify>
                                <setInstallerVariableFromRegEx>
                                    <name>badAssetList</name>
                                    <pattern>\n+</pattern>
                                    <substitution> </substitution>
                                    <text>${badAssetList}</text>
                                </setInstallerVariableFromRegEx>
                            </actionList>
                            <conditionRuleList>
                                <platformTest>
                                    <type>windows</type>
                                </platformTest>
                            </conditionRuleList>
                        </if>
                        <if>
                            <explanation>Check MD5 for OS X</explanation>
                            <actionList>
                                <changePermissions>
                                    <files>${system_temp_directory}/md5Verification.sh</files>
                                    <permissions>777</permissions>
                                </changePermissions>
                                <setInstallerVariableFromScriptOutput>
                                    <exec>${system_temp_directory}/md5Verification.sh</exec>
                                    <execArgs></execArgs>
                                    <name>badAssetList</name>
                                    <progressText>Verifying assets</progressText>
                                    <workingDirectory>${mainDir}</workingDirectory>
                                </setInstallerVariableFromScriptOutput>
                            </actionList>
                            <conditionRuleList>
                                <platformTest>
                                    <type>osx</type>
                                </platformTest>
                            </conditionRuleList>
                        </if>
                        <if>
                            <explanation>If assets fail MD5 then offer to delete and redownload</explanation>
                            <actionList>
                                <showQuestion>
                                    <default>yes</default>
                                    <text>The following game assets appear to be corrupt:
${badAssetList}

Would you like to redownload these assets?
</text>
                                    <variable>assetsNotVerified</variable>
                                </showQuestion>
                            </actionList>
                            <conditionRuleList>
                                <compareText>
                                    <logic>equals</logic>
                                    <negate>1</negate>
                                    <text>${badAssetList}</text>
                                    <value></value>
                                </compareText>
                            </conditionRuleList>
                            <elseActionList>
                                <setInstallerVariable>
                                    <name>AssetsNotVerified</name>
                                    <value>0</value>
                                </setInstallerVariable>
                            </elseActionList>
                        </if>
                        <if>
                            <explanation>Delete assets</explanation>
                            <actionList>
                                <foreach>
                                    <values>${badAssetList}</values>
                                    <variables>badAsset</variables>
                                    <actionList>
                                        <deleteFile>
                                            <path>${mainDir}/${badAsset}</path>
                                        </deleteFile>
                                    </actionList>
                                </foreach>
                            </actionList>
                            <conditionRuleList>
                                <isTrue>
                                    <value>${assetsNotVerified}</value>
                                </isTrue>
