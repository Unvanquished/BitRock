                                </distributionFile>
                            </distributionFileList>
                        </folder>
                    </folderList>
                </component>
                <component>
                    <name>maps</name>
                    <description>Maps</description>
                    <canBeEdited>1</canBeEdited>
                    <detailedDescription>Download all the maps</detailedDescription>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>Maps</description>
                            <destination>${mainDir}</destination>
                            <name>mapsfolder</name>
                            <platforms>all</platforms>
                            <distributionFileList>
                                <distributionFile>
                                    <origin>maplist</origin>
