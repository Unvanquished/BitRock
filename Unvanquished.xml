                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec></windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
                <shortcut>
                    <comment>Play Unvanquished, with the old renderer</comment>
                    <exec>${installdir}/unvanquished +set cl_renderer GL</exec>
                    <icon>${installdir}/unvanquished.png</icon>
